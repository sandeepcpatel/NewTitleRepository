<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="menucontainer">
                <ul id="menu">
                    <li class="selected">@Html.ActionLink("Title", "Index", "Title")</li>
                    <li>@Html.ActionLink("Genre", "ComingSoon", "Title")</li>
                    <li>@Html.ActionLink("Actors", "ComingSoon", "Title")</li>
                    <li>@Html.ActionLink("Showtimes", "ComingSoon", "Title")</li>
                    <li>@Html.ActionLink("Trailers", "ComingSoon", "Title")</li>
                    <li>@Html.ActionLink("TV", "ComingSoon", "Title")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
