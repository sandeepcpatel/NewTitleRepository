        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TitleNameSortable)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TitleNameSortable)
            @Html.ValidationMessageFor(model => model.TitleNameSortable)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TitleTypeId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TitleTypeId)
            @Html.ValidationMessageFor(model => model.TitleTypeId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ReleaseYear)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ReleaseYear)
            @Html.ValidationMessageFor(model => model.ReleaseYear)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProcessedDateTimeUTC)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProcessedDateTimeUTC)
